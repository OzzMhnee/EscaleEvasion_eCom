{% extends 'base.html.twig' %}

{% block title %}Réserver {{ product.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        .flatpickr-day.disabled, .flatpickr-day.disabled:hover {
            background: #e0e0e0 !important;
            color: #b0b0b0 !important;
            text-decoration: line-through;
            cursor: not-allowed;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="parallax">
        <div class="container">
            <div class="row my-5 justify-content-center">
                <div class="card p-4 bg-light bg-opacity-50" style="max-width: 600px;">
                    <h2 class="mb-4 text-center">Réserver : <span class="text-primary">{{ product.name }}</span></h2>
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.startDate, 'Date de début', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.startDate, {'attr': {'class': 'form-control', 'autocomplete': 'off', 'id': 'reservation_startDate'}}) }}
                            {{ form_errors(form.startDate) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.endDate, 'Date de fin', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.endDate, {'attr': {'class': 'form-control', 'autocomplete': 'off', 'id': 'reservation_endDate'}}) }}
                            {{ form_errors(form.endDate) }}
                        </div>
                        <div class="mb-3 text-center">
                            <span class="fw-bold">Prix par nuit :</span>
                            <span id="pricePerNight" class="text-primary">{{ product.price }} €</span>
                        </div>
                        <div class="mb-3 text-center">
                            <span class="fw-bold">Nombre de nuits :</span>
                            <span id="nbNights" class="text-primary">0</span>
                        </div>
                        <div class="mb-3 text-center">
                            <span class="fw-bold">Prix total du séjour :</span>
                            <span id="totalPrice" class="text-success">0 €</span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-dark btn-sm px-4">Réserver</button>
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-secondary btn-sm px-4 ms-2">Retour au produit</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        // Les plages réservées sont transmises depuis le contrôleur sous la forme :
        // [ {from: "2024-08-04", to: "2024-08-31"}, ... ]
        var reservedRanges = {{ reservedRanges|json_encode|raw }};

        // Calcul dynamique du prix du séjour
        function calcNightsAndPrice() {
            const startInput = document.getElementById('reservation_startDate');
            const endInput = document.getElementById('reservation_endDate');
            const nbNightsSpan = document.getElementById('nbNights');
            const totalPriceSpan = document.getElementById('totalPrice');
            const pricePerNight = {{ product.price|default(0) }};
            let nights = 0;
            let total = 0;
            if (startInput.value && endInput.value) {
                const start = new Date(startInput.value);
                const end = new Date(endInput.value);
                nights = Math.round((end - start) / (1000 * 60 * 60 * 24));
                if (nights > 0) {
                    total = nights * pricePerNight;
                } else {
                    nights = 0;
                    total = 0;
                }
            }
            nbNightsSpan.textContent = nights;
            totalPriceSpan.textContent = total + " €";
        }

        function initFlatpickr() {
            if (typeof flatpickr === 'undefined') {
                console.error('Flatpickr n\'est pas chargé !');
                return;
            }
            flatpickr("#reservation_startDate", {
                disable: reservedRanges.map(function(range) {
                    return { from: range.from, to: range.to };
                }),
                minDate: "today",
                dateFormat: "Y-m-d",
                onChange: calcNightsAndPrice
            });
            flatpickr("#reservation_endDate", {
                disable: reservedRanges.map(function(range) {
                    return { from: range.from, to: range.to };
                }),
                minDate: "today",
                dateFormat: "Y-m-d",
                onChange: calcNightsAndPrice
            });

            document.getElementById('reservation_startDate').addEventListener('change', calcNightsAndPrice);
            document.getElementById('reservation_endDate').addEventListener('change', calcNightsAndPrice);
        }

        document.addEventListener('turbo:load', initFlatpickr);
        document.addEventListener('DOMContentLoaded', initFlatpickr);

        console.log('Plages désactivées pour Flatpickr:', reservedRanges);
    </script>
{% endblock %}