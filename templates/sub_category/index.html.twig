{% extends 'base.html.twig' %}

{% block title %}Liste des sous-catégories{% endblock %}

{% block body %}
	<style>
		.containerForm {
			margin-top: 100px;
		}
		.table.bg-light {
			background-color: rgba(0, 0, 0, 0.07) !important;
		}
		.table.bg-light th,
		.table.bg-light td {
			background-color: rgba(255, 255, 255, 0.58) !important;
		}
		.card {
			border-radius: 10px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		}
	</style>
	<div class="parallax">
		<div class="container ">
			<div class="row my-5">
				<div class="card p-4 bg-light bg-opacity-50 d-flex flex-column align-items-center" style="max-width: 1000px;">
					<h1>Liste des sous-catégories</h1>
					<table class="table bg-light table-hover">
						<thead>
							<tr>
								<th scope="col">ID</th>
								<th scope="col">Nom de la sous-catégorie</th>
								<th scope="col">Liée à la catégorie :</th>
								<th scope="col">Vous pouvez :</th>
							</tr>
						</thead>
						<tbody>
							{% for sub_category in sub_categories %}
								<tr>
									<th scope="row">{{sub_category.id}}</th>
									<td style="width: 350px;" class="align-middle">{{sub_category.name}}</td>
									<td style="width: 250px;" class="align-middle">{{sub_category.category}}</td>
									<td style="width: 250px;">
										<a href="{{path('app_sub_category_edit', {'id': sub_category.id})}}" class="btn btn-outline-primary">Modifier</a>
										<a onclick="return confirm('Voulez vous vraiment supprimer cette sous-catégorie ?')" href="{{path('app_sub_category_delete', {'id': sub_category.id})}}" class="btn btn-outline-danger">Supprimer</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
				<div class="d-flex justify-content-center">
					<a href="{{path('app_sub_category_new')}}" class="btn btn-light text-dark mt-3 px-4">Ajouter une nouvelle sous-catégorie</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
