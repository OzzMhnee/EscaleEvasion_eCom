{% extends 'base.html.twig' %}

{% block title %}Nouvelle Sous Catégorie{% endblock %}



{% block body %}
	<div class="parallax">
		<div class="container containerForm">
			<div class="d-flex justify-content-center align-items-center">
				<div class="card p-4 col-6 bg-light bg-opacity-50 text-center" style="width: 600px;">
					<h1>Ajouter une nouvelle sous-catégorie</h1>
					{{ form_start(form) }}
						{# {{ include('sub_category/_form.html.twig') }} #}
						<div class="mb-3">
							{{ form_label(form.name, 'Nom de la sous-catégorie', {'label_attr': {'class': 'form-label fw-bold'}}) }}
							{{ form_widget(form.name, { 'attr': {'class': 'form-control text-center', "placeholder": "Nom de la sous-catégorie" } }) }}
							{{ form_errors(form.name) }}
							{{ form_row(form.category, { 'attr': {'class': 'form-select text-center', "placeholder": "Sélectionnez une catégorie" } }) }}
							{{ form_errors(form.category) }}
						</div>
						<div class="d-flex justify-content-center gap-2">
							<button type="submit" class="btn btn-dark text-white mt-3 px-4">Ajouter</button>
							<a href="{{ path('app_sub_category_index') }}"class="btn btn-light text-dark mt-3 px-4">Retour à la liste des sous-catégories</a>
						</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>	
	</div>							
{% endblock %}
