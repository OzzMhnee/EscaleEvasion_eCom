{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<style>
		.parallax {
            background-image: url('/protected-bg/backgroundParallax6.png');
            height: 100vh;
			width: 100%;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }
	</style>
	<div class="parallax">
		<div class="container containerForm ">
			<div class="card p-5 col-6">
				<h1>Register</h1>
				{{ form_errors(registrationForm) }}
				{{ form_start(registrationForm) }}
				{{csrf_token('intention') }}
				{{ form_widget(registrationForm.email,{ 'attr': {'class': 'form-control', "placeholder": "Email" } }) }}
				{{ form_widget(registrationForm.first_name,{ 'attr': {'class': 'form-control', "placeholder": "First Name"}  }) }}
				{{ form_widget(registrationForm.last_name,{ 'attr': {'class': 'form-control', "placeholder": "Last Name" } }) }}
				{# {{ form_row(registrationForm.password)  }} #}
				{{ form_widget(registrationForm.plainPassword,{ 'attr': {'class': 'form-control', "placeholder": "Password" }, "label": "Password" }) }}
				{{ form_row(registrationForm.agreeTerms,{ 'attr': {'class': 'checkbox'}})  }}
				<button type="submit" class="btn btn-lg btn-dark">Register</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>	
	</div>	
{% endblock %}
